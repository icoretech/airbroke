{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!**/node_modules",
      "!**/.next",
      "!**/dist",
      "!**/public",
      "!**/build",
      "!**/prisma/generated",
      "!components/ui",
      "!components/ai-elements"
    ]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              {
                "type": false,
                "source": ":NODE:"
              },
              {
                "type": false,
                "source": ":PACKAGE:"
              },
              {
                "type": false,
                "source": ":ALIAS:"
              },
              {
                "type": false,
                "source": ":PATH:"
              },
              {
                "type": true,
                "source": ":NODE:"
              },
              {
                "type": true,
                "source": ":PACKAGE:"
              },
              {
                "type": true,
                "source": ":ALIAS:"
              },
              {
                "type": true,
                "source": ":PATH:"
              }
            ]
          }
        }
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["components/ui/**", "components/ai-elements/**"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    },
    {
      "linter": {
        "enabled": false
      }
    }
  ],
  "linter": {
    "enabled": true,
    "domains": {
      "next": "recommended"
    },
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": {
          "level": "warn",
          "options": {
            "style": "separatedType"
          }
        }
      }
    }
  }
}
