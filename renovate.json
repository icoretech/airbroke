{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "packageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "managers": [
        "npm",
        "yarn"
      ],
      "matchPackageNames": [
        "next",
        "@next/bundle-analyzer",
        "eslint-config-next"
      ],
      "enabled": false
    }
  ]
}
